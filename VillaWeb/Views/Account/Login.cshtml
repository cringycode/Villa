@model LoginVM

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-secondary bg-gradient ml-0 py-4 mb-3 rounded-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-black">Login</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4 rounded-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form method="post">
                            <input asp-for="RedirectUrl" hidden/>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" aria-required="true"/>
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" aria-required="true"/>
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <input class="form-check-input" asp-for="RememberMe"/>

                                <label class="form-label">
                                    Remember Me
                                </label>
                            </div>
                            <div>
                                <button type="submit" class="w-100 btn btn-lg btn-outline-secondary">Log in</button>
                            </div>
                            <div class="d-flex justify-content-center pt-2">
                                <small>
                                    <button class="btn btn-group-vertical" asp-action="">Forgot your password?</button>
                                    <button class="btn btn-group-vertical" asp-all-route-returnUrl="@Model.RedirectUrl" asp-action="Register">Register as a new user</button>

                                </small>
                            </div>
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
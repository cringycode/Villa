@model IEnumerable<Villa.Domain.Entities.Villa>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-light ml-0 py-3 rounded-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Villa List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4 rounded-3">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn btn-dark rounded-3">
                    <i class="bi bi-plus-circle"></i> Create New Villa
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>Price</th>
                <th>Sqm</th>
                <th>Occupancy</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>@obj.Sqm</td>
                    <td>@obj.Occupancy</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Update" asp-route-villaId="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-villaId="@obj.Id" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>